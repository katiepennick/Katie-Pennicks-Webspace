---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
excludeFromSitemap: true
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for item in collections.all -%}
  {%- if item.url
        and item.url != "/404/"
        and item.url != "/not_found/"
        and item.url != "/README/"
        and not item.data.draft
        and not item.data.excludeFromSitemap
  -%}
  <url>
    <loc>https://katiepennick.com{{ item.url }}</loc>
    {%- if item.date -%}
    <lastmod>{{ item.date.toISOString().slice(0,10) }}</lastmod>
    {%- endif -%}
  </url>
  {%- endif -%}
{%- endfor -%}
</urlset>
