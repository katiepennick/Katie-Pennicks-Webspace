---
layout: layout_blog.njk
---

<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>

        {% if date %}
        <p class="post-meta">
            <time datetime="{{ date }}">{{ date }}</time>
        </p>
        {% endif %}
    </header>

    <div class="post-body">
        {{ content | safe }}
    </div>
</article>